<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #cccccc; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.Controllers.Contact.Contact">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="newMessageLabel" alignment="CENTER" prefWidth="760.0" text="New Message" textFill="#333333">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="To:" textFill="#555555">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="toInput" HBox.hgrow="ALWAYS" promptText="Enter username or email" style="-fx-border-radius: 5; -fx-background-radius: 5;" />
            <ComboBox fx:id="recipientTypeComboBox" prefWidth="120.0" promptText="Type" style="-fx-border-radius: 5; -fx-background-radius: 5;" />
            <Button fx:id="addRecipientBtn" mnemonicParsing="false" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Add Recipient" />
         </children>
      </HBox>
      <ListView fx:id="recipientListView" prefHeight="100.0" prefWidth="200.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />
      <Label text="Subject:" textFill="#555555">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="subjectInput" promptText="Enter subject" style="-fx-border-radius: 5; -fx-background-radius: 5;" />
      <Label text="Message:" textFill="#555555">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="informationInput" prefHeight="250.0" prefWidth="200.0" promptText="Write your message here..." style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" wrapText="true" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="discardBtn" mnemonicParsing="false" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Discard" />
            <Button fx:id="sendBtn" mnemonicParsing="false" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Send" />
         </children>
      </HBox>
      <Label fx:id="statusLabel" alignment="CENTER_RIGHT" prefWidth="760.0" textFill="#888888">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </children>
</VBox>